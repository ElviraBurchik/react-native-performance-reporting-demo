{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "strict": true,
    "noEmit": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "ios",
    "android",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}
